<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.siteforum.plugins.deleteMe"
    version="1.0">
    <name>DeleteMe</name>
    <description>Cordova DeleteMe Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,device</keywords>
    

    <js-module src="www/deleteMe.js" name="deleteMe">
        <clobbers target="deleteMe" />
    </js-module>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="DeleteMe">
                <param name="ios-package" value="deleteMe"/>
            </feature>
        </config-file>

        <header-file src="src/ios/DeleteMe.h" />
        <source-file src="src/ios/DeleteMe.m" />
    </platform>

</plugin>





